{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false, // needs to be false to emit declarations
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src/**/*", "index.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
