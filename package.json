{
  "name": "caramel",
  "title": "Caramel",
  "version": "0.0.1",
  "description": "Cross-platform UI component library for React Native.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cara-care/caramel.git",
    "baseUrl": "https://github.com/cara-care/caramel"
  },
  "keywords": [
    "react-native"
  ],
  "author": {
    "name": "Cara.Care",
    "email": "hello@cara.care"
  },
  "scripts": {
    "compile": "npm install && tsc",
    "prepublish": "tsc -d",
    "build:types": "tsc -d --declarationDir dist/build/lib --declarationMap --emitDeclarationOnly --allowJs false",
    "dist": "rm -rf dist/* && npm run compile && babel . --out-dir dist --ignore node_modules,dist,stories --source-maps",
    "build": "npm run compile && npm run build:types",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx,ts,tsx}'",
    "eslint": "eslint \"src/**/*.tsx\""
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/react": "^16.9.11",
    "@types/react-native": "^0.60.22",
    "eslint": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "react-native-slider": "^0.11.0",
    "react-navigation": "^4.0.10"
  }
}
